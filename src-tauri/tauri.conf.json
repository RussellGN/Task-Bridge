{
   "$schema": "https://schema.tauri.app/config/2",
   "productName": "Task Bridge",
   "version": "2.2.0",
   "identifier": "com.task-bridge.app",
   "build": {
      "beforeDevCommand": "pnpm dev",
      "devUrl": "http://localhost:1420",
      "beforeBuildCommand": "pnpm build",
      "frontendDist": "../dist"
   },
   "app": {
      "windows": [
         {
            "label": "main",
            "visible": false,
            "title": "Task Bridge",
            "width": 800,
            "height": 600,
            "center": true,
            "maximized": true,
            "backgroundColor": "#1c191f"
         },
         {
            "label": "splashscreen",
            "visible": true,
            "width": 350,
            "height": 200,
            "center": true,
            "maximized": false,
            "maximizable": false,
            "url": "splashscreen.html",
            "backgroundColor": "#1c191f",
            "decorations": false
         }
      ],
      "security": {
         "csp": null
      }
   },
   "bundle": {
      "active": true,
      "targets": "all",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
   },
   "plugins": {
      "deep-link": {
         "desktop": {
            "schemes": ["task-bridge"]
         }
      }
   }
}
